@model LoginViewModel

@{
  ViewBag.Title = "Login";
}
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Budget Login</h3>
      </div>
      <div class="panel-body">
        @using (Html.BeginForm())
        {
          @Html.AntiForgeryToken()
          <fieldset>
            <div class="form-group">
              @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", placeholder = "Login ID" })
              @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="form-group">
              @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control", placeholder = "Password" })
              @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="checkbox">
              <label>
                @Html.CheckBoxFor(model => model.RememberMe) Remember Me
              </label>
            </div>
            <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
          </fieldset>
        }
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function () { $('#Member_Name').focus(); });
</script>