@model BudgetsViewModel

@{
  ViewBag.Title = "Budgets";
}

@Html.Partial("_Tabs", Model.Account)

<script src="@Url.Content("~/App/Budgets.js")"></script>

<script type="text/javascript">
  var data = @Html.Raw(Model.ToJson());

  var vm = new BudgetsViewModel(data.account, data.categories, data.frequencies);

  $(function(){
    $('table.table-sortable tbody').sortable({
      items: "tr:not(.ui-state-disabled)",
      update: vm.sequences,
      helper: nbHelper.sortable
    });

    $('li[tab-budgets]').addClass('active');

    ko.applyBindings(vm);
  });
</script>


<div data-bind="foreach: categories" style="margin-top: 16px">
  <table class="table table-condensed table-striped table-sortable">
    <thead>
      <tr>
        <th data-bind="text: name"></th>
        <th class="icons"></th>
        <th style="width: 50px"></th>
        <th class="text-right" style="width: 85px">W</th>
        <th class="text-right" style="width: 85px">M</th>
        <th class="text-right" style="width: 85px">Y</th>
        <th class="icons">
          <a href="#" data-bind="click: $parent.create" nb-create-icon></a>
        </th>
      </tr>
    </thead>
    <tbody data-bind="foreach: budgets">
      <tr>
        <td data-bind="text: name"></td>
        <td class="text-right" data-bind="text: amount | fixed"></td>
        <td class="text-left">x {{ frequency }}</td>
        <td class="text-right" data-bind="text: weeklyAmount | fixed"></td>
        <td class="text-right" data-bind="text: monthlyAmount | fixed"></td>
        <td class="text-right" data-bind="text: yearlyAmount | fixed"></td>
        <th class="icons">
          <a href="#" data-bind="click: $root.update" nb-update-icon></a>
          <a href="#" data-bind="click: $root.delete" nb-delete-icon></a>
        </th>
      </tr>
    </tbody>
  </table>
</div>

<div class="modal" tabindex="-1" role="dialog" aria-hidden="true" data-bind="with: form">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Budget</h4>
      </div>
      <div class="modal-body">
        <form id="detailsForm" class="form-horizontal" data-bind="submit: save">

          <div class="form-group alert alert-danger" data-bind="visible: errors.length">
            <ul class="col-sm-offset-4 col-sm-8" data-bind="foreach: errors">
              <li data-bind="text: $data"></li>
            </ul>
          </div>

          <div class="form-group" data-bind="visible: showId(), with: clone">
            <label class="col-sm-4 control-label">
              ID
            </label>
            <div class="col-sm-8 form-control-static" data-bind="text: id"></div>
          </div>

          <div class="form-group" data-bind="with: clone">
            <label class="col-sm-4 control-label">
              Name
            </label>
            <div class="col-sm-8">
              <input class="form-control" name="name" data-bind="value: name" />
            </div>
          </div>

          <div class="form-group" data-bind="with: clone">
            <label class="col-sm-4 control-label">
              Category
            </label>
            <div class="col-sm-8">
              <select class="form-control" name="categoryId" data-bind="options: $parent.categories, optionsText: 'name', optionsValue: 'id', value: categoryId"></select>
            </div>
          </div>

          <div class="form-group" data-bind="with: clone">
            <label class="col-sm-4 control-label">
              Frequency
            </label>
            <div class="col-sm-8">
              <select class="form-control" name="frequency" data-bind="options: $parent.frequencies, optionsText: 'name', optionsValue: 'id', value: frequency"></select>
            </div>
          </div>

          <div class="form-group" data-bind="with: clone">
            <label class="col-sm-4 control-label">
              Amount
            </label>
            <div class="col-sm-8">
              <input class="form-control" name="amount" data-bind="value: amount" />
            </div>
          </div>

          <div class="form-group" data-bind="with: clone">
            <label class="col-sm-4 control-label">
              Start/End Date
            </label>
            <div class="col-sm-4">
              <input class="form-control" name="startDate" data-bind="value: startDate" />
            </div>
            <div class="col-sm-4">
              <input class="form-control" name="endDate" data-bind="value: endDate" />
            </div>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" form="detailsForm" class="btn" data-bind="css: buttonClass(), text: buttonText()"></button>
        <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: cancel">Close</button>
      </div>
    </div>
  </div>
</div>