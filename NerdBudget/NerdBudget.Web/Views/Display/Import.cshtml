@model ImportViewModel

@{
  ViewBag.Title = "Import";
}

@Html.Partial("_Tabs", Model.Account)

<script src="@Url.Content("~/App/Import.js")"></script>

<script type="text/javascript">
  var data = @Html.Raw(Model.ToJson());

  var ivm = new ImportDetailModel(data);

  $(function(){
    $('li[tab-import]').addClass('active');

    ivm.start();
  });
</script>


<div id="import-form-body" style="display: none;">
  <form class="form-horizontal">

    <div class="form-group">
      <div class="col-sm-12">
        <textarea class="form-control" name="transactions" data-bind="value: transactions" rows="9"></textarea>
      </div>
    </div>

  </form>

  <div class="form-horizontal" data-bind="visible: ledger != null">
    <div class="form-group">
      <label class="col-sm-4 control-label">
        Date
      </label>
      <div class="col-sm-8">
        <p class="form-control-static" data-bind="text: ledger.date"></p>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-4 control-label">
        Description
      </label>
      <div class="col-sm-8">
        <p class="form-control-static" data-bind="value: ledger.description"></p>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-4 control-label">
        Amount
      </label>
      <div class="col-sm-2">
        <p class="form-control-static" data-bind="value: ledger.amount"></p>
      </div>
      <label class="col-sm-2 control-label">
        Balance
      </label>
      <div class="col-sm-2">
        <p class="form-control-static" data-bind="value: ledger.balance"></p>
      </div>
    </div>
  </div>
</div>