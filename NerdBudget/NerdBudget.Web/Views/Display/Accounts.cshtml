@model AccountsViewModel

@{
  ViewBag.Title = "Accounts";
}

<script src="@Url.Content("~/App/Accounts.js")"></script>

<script type="text/javascript">
  var data = @Html.Raw(Model.ToJson());

  var vm = new AccountsViewModel(data.accounts);

  $(function(){ ko.applyBindings(vm); });
</script>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th class="icons">
      </th>
      <th class="icons">
      </th>
      <th class="icons">
        <a href="#" data-bind="click: create" nb-create-icon></a>
      </th>
    </tr>
  </thead>
  <tbody data-bind="foreach: accounts">
    <tr>
      <td data-bind="text: name, attr: { 'account-id': id }"></td>
      <td class="icons">
        <a nb-list-icon data-bind="attr: { href: $parent.categoryPath(id) }"></a>
        <a nb-dollar-icon data-bind="attr: { href: $parent.budgetPath(id) }"></a>
      </td>
      <td class="icons">
        <a nb-import-icon data-bind="attr: { href: $parent.importPath(id) }"></a>
      </td>
      <td class="icons">
        <a href="#" data-bind="click: $parent.update" nb-update-icon></a>
        <a href="#" data-bind="click: $parent.delete" nb-delete-icon></a>
      </td>
    </tr>
  </tbody>
</table>

<div class="modal" tabindex="-1" role="dialog" aria-hidden="true" data-bind="with: form">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Account</h4>
      </div>
      <div class="modal-body">
        <form id="detailsForm" class="form-horizontal" data-bind="submit: save">

          <div class="form-group alert alert-danger" data-bind="visible: errors.length">
            <ul class="col-sm-offset-4 col-sm-8" data-bind="foreach: errors">
              <li data-bind="text: $data"></li>
            </ul>
          </div>

          <div class="form-group" data-bind="visible: showId(), with: clone">
            <label class="col-sm-4 control-label">
              ID
            </label>
            <div class="col-sm-8 form-control-static" data-bind="text: id"></div>
          </div>

          <div class="form-group" data-bind="with: clone">
            <label class="col-sm-4 control-label">
              Name
            </label>
            <div class="col-sm-8">
              <input class="form-control" name="name" data-bind="value: name" />
            </div>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" form="detailsForm" class="btn" data-bind="css: buttonClass(), text: buttonText(), visible: !saving"></button>
        <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: cancel">Close</button>
      </div>
    </div>
  </div>
</div>