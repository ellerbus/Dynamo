@model AccountsViewModel

@{
  ViewBag.Title = "Accounts";
}

<script src="@Url.Content("~/App/Accounts.js")"></script>

<script type="text/javascript">
  var data = @Html.Raw(Model.ToJson());

  var vm = new AccountsViewModel(data.accounts);

  $(function(){ ko.applyBindings(vm); });
</script>


<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th class="icons">
      </th>
      <th class="icons">
      </th>
      <th class="icons">
        <a href="#" class="btn btn-default btn-sm" data-bind="click: create"><i class="fa fa-plus fa-fw text-success"></i></a>
      </th>
    </tr>
  </thead>
  <tbody data-bind="foreach: accounts">
    <tr>
      <td data-bind="text: name"></td>
      <td class="icons">
        <!--
        <a href="#/categories/{{ id }}" nb-list-icon></a>
        <a href="#/budgets/{{ id }}" nb-dollar-icon></a>
        -->
      </td>
      <td class="icons">
        <!--
        <a href="#/import/{{ id }}" nb-import-icon></a>
        -->
      </td>
      <td class="icons">
        <a href="#" class="btn btn-default btn-sm" data-bind="click: $parent.update"><i class="fa fa-pencil fa-fw text-primary"></i></a>
        <a href="#" class="btn btn-default btn-sm" data-bind="click: $parent.delete"><i class="fa fa-times fa-fw text-danger"></i></a>
        <!--
        <a href="#/click/update/{{ id }}"></a>
        <a href="#/click/delete/{{ id }}" nb-delete-icon></a>
        -->
      </td>
    </tr>
  </tbody>
</table>

<div class="modal" tabindex="-1" role="dialog" aria-hidden="true" data-bind="with: clone">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Account</h4>
      </div>
      <div class="modal-body">
        <form id="accountForm" class="form-horizontal" data-bind="submit: $parent.form.save">

          <div class="form-group alert alert-danger" data-bind="visible: $parent.form.errors.length">
            <ul class="col-sm-offset-4 col-sm-8" data-bind="foreach: $parent.form.errors">
              <li data-bind="text: $data"></li>
            </ul>
          </div>

          <div class="form-group" data-bind="visible: $parent.form.showId()">
            <label class="col-sm-4 control-label">
              ID
            </label>
            <div class="col-sm-8 form-control-static" data-bind="text: id"></div>
          </div>

          <div class="form-group" ng-class="{ 'has-error': accountForm.name.$invalid }">
            <label class="col-sm-4 control-label">
              Name
            </label>
            <div class="col-sm-8">
              <input class="form-control" name="name" data-bind="value: name" />
            </div>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" form="accountForm" class="btn" data-bind="css: $parent.form.buttonClass(), text: $parent.form.buttonText()"></button>
        <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: $parent.form.cancel">Close</button>
      </div>
    </div>
  </div>
</div>