@model CategoriesViewModel

@{
  ViewBag.Title = "Categories";
}

@Html.Partial("_Tabs", Model.Account)

<script src="@Url.Content("~/App/Categories.js")"></script>

<script type="text/javascript">
  var data = @Html.Raw(Model.ToJson());

  var vm = new CategoriesViewModel(data.account, data.categories);

  $(function(){
    $('table.table-sortable tbody').sortable({
      items: "tr:not(.ui-state-disabled)",
      update: vm.sequences,
      helper: nbHelper.sortable
    });

    $('li[tab-categories]').addClass('active');

    ko.applyBindings(vm);
  });
</script>

<table class="table table-condensed table-striped table-sortable">
  <thead>
    <tr>
      <th>Name</th>
      <th class="text-center" style="width: 100px">Income</th>
      <th class="icons">
        <a href="#" data-bind="click: create" nb-create-icon></a>
      </th>
    </tr>
  </thead>
  <tbody data-bind="foreach: categories">
    <tr data-bind="css: multiplier == 1 ? 'ui-state-disabled' : ''">
      <td data-bind="text: name, attr: { 'category-id': id }"></td>
      <td data-bind="text: isIncome()" class="text-center"></td>
      <td class="icons">
        <a href="#" data-bind="click: $parent.update" nb-update-icon></a>
        <a href="#" data-bind="click: $parent.delete" nb-delete-icon></a>
      </td>
    </tr>
  </tbody>
</table>

<div class="modal" tabindex="-1" role="dialog" aria-hidden="true" data-bind="with: form">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Category</h4>
      </div>
      <div class="modal-body">
        <form id="detailsForm" class="form-horizontal" data-bind="submit: save">

          <div class="form-group alert alert-danger" data-bind="visible: errors.length">
            <ul class="col-sm-offset-4 col-sm-8" data-bind="foreach: errors">
              <li data-bind="text: $data"></li>
            </ul>
          </div>

          <div class="form-group" data-bind="visible: showId(), with: clone">
            <label class="col-sm-4 control-label">
              ID
            </label>
            <div class="col-sm-8 form-control-static" data-bind="text: id"></div>
          </div>

          <div class="form-group" data-bind="with: clone">
            <label class="col-sm-4 control-label">
              Name
            </label>
            <div class="col-sm-8">
              <input class="form-control" name="name" data-bind="value: name" />
            </div>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" form="detailsForm" class="btn" data-bind="css: buttonClass(), text: buttonText()"></button>
        <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: cancel">Close</button>
      </div>
    </div>
  </div>
</div>